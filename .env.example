# Telegram Configuration
# 1. Crea un bot con @BotFather en Telegram
# 2. Obtén tu chat_id enviando un mensaje a @userinfobot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Monitor Configuration
# Intervalo entre verificaciones en segundos (1800 = 30 minutos)
CHECK_INTERVAL_SECONDS=1800

# Tipo de visita (tag)
# Opciones: MV-Biglietti, VG-Musei, VG-GiardMusei, Pellegrini
VISIT_TAG=MV-Biglietti

# Tipo de visitante (whoId)
# 1 = Singoli, 2 = Gruppi, 3 = Famiglie, 4 = Pellegrini, 5 = Scuole, 6 = Università
WHO_ID=1

# Número de visitantes
VISITOR_NUM=1

# Filtro de producto (para buscar solo ciertos productos)
# Ejemplo: "Biglietti d'ingresso" para solo entradas básicas
# Dejar vacío para mostrar todos los productos disponibles
PRODUCT_FILTER=Biglietti d'ingresso

# Fechas objetivo (formato DD/MM/YYYY separadas por coma)
# Dejar vacío para monitorear todas las fechas disponibles
TARGET_DATES=

# Máximo de fechas a consultar por verificación (para evitar detección)
MAX_DATES_PER_CHECK=5

# Webshare Proxy Configuration (opcional)
# Obtén tus credenciales en https://proxy.webshare.io/
WEBSHARE_PROXY_HOST=
WEBSHARE_PROXY_PORT=
WEBSHARE_PROXY_USER=
WEBSHARE_PROXY_PASS=
